# general settings
auto-reload yes
max-items 14
reload-time 120
reload-threads 4
download-retries 4
download-timeout 10

text-width 80
confirm-exit        no
notify-program      "tmux display"
notify-always yes
notify-beep yes
notify-format  "%I %d %n %f new articles (%n unread articles, %f unread feeds)"
notify-screen no
notify-xterm no
always-display-description true 

mark-as-read-on-hover no
keep-articles-days 3
article-sort-order author-desc

# externel browser
browser "/bin/w3m -cols 80 -t 4 %u"
macro y set browser "/bin/mpv --ytdl-format=18 %u"; open-in-browser ; set browser "/bin/w3m %u"
macro u set browser "sudo mplayer -vo fbdev2 $(youtube-dl -g %u)"; open-in-browser ; set browser "/bin/w3m %u"
macro g set browser "/bin/google-chrome %u"; open-in-browser ; set browser "/bin/w3m %u"
macro l set browser "/bin/links2 -g %u"; open-in-browser ; set browser "/bin/w3m %u"
macro o open-in-browser 

# unbind keys
unbind-key ENTER
