# general settings
auto-reload yes
max-items 16
reload-time 120
reload-threads 4
download-retries 4
download-timeout 10
text-width 80
confirm-exit        no
notify-program      "tmux display"
notify-always yes
notify-beep yes
notify-format  "%I %d %n %f new articles (%n unread articles, %f unread feeds)"
notify-screen yes
notify-xterm yes
always-display-description true 

mark-as-read-on-hover no
keep-articles-days 7
article-sort-order date-asc

# externel browser
browser "surf %u"
#browser "/bin/qutebrowser %u"
macro y set browser "/bin/mpv --ytdl-format=18 %u"; open-in-browser ; set browser "surf %u"
macro t set browser "/bin/mpv --ytdl-format=best %u"; open-in-browser ; set browser "surf %u"
macro m set browser "/bin/mpv --no-video %u"; open-in-browser ; set browser "surf %u"
macro u set browser "sudo mplayer -vo fbdev2 $(youtube-dl -g %u)"; open-in-browser ; set browser "surf %u"
macro l set browser "/bin/links2 -g %u"; open-in-browser ; set browser "surf %u"
macro q set browser "/bin/qutebrowser %u"; open-in-browser ; set browser "surf %u"
macro w set browser "w3m -T text/HTML -cols 80 -o auto_image=TRUE -num -no-mouse %u"; open-in-browser ; set browser "surf %u"
macro p set browser "/bin/mpv %u"; open-in-browser ; set browser "surf %u"
macro o open-in-browser 

# unbind keys
